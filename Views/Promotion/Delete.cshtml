@model MovieTheater.Models.Promotion

@{
    ViewData["Title"] = "Delete Promotion";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Delete Promotion</h4>
                </div>
                <div class="card-body">
                    <h3 class="text-danger">Are you sure you want to delete this promotion?</h3>
                    <div class="mt-4">
                        <dl class="row">
                            <dt class="col-sm-3">Title</dt>
                            <dd class="col-sm-9">@Model.Title</dd>

                            <dt class="col-sm-3">Detail</dt>
                            <dd class="col-sm-9">@Model.Detail</dd>

                            <dt class="col-sm-3">Discount Level</dt>
                            <dd class="col-sm-9">@Model.DiscountLevel%</dd>

                            <dt class="col-sm-3">Start Time</dt>
                            <dd class="col-sm-9">@Model.StartTime?.ToString("g")</dd>

                            <dt class="col-sm-3">End Time</dt>
                            <dd class="col-sm-9">@Model.EndTime?.ToString("g")</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">@(Model.IsActive ? "Active" : "Inactive")</dd>
                        </dl>

                        @if (!string.IsNullOrEmpty(Model.Image))
                        {
                            <div class="form-group mb-3">
                                <label class="control-label">Promotion Image</label>
                                <div>
                                    <img src="@Model.Image" alt="Promotion Image" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                                </div>
                            </div>
                        }

                        <form asp-action="Delete" method="post" class="mt-4">
                            <input type="hidden" asp-for="PromotionId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="MainPage" asp-controller="Admin" asp-route-tab="PromotionMg" class="btn btn-secondary">Back to List</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 