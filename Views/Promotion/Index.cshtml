@using MovieTheater.Models
@model List<Promotion>

@{
    ViewData["Title"] = "Promotions List";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<div class="container mt-4">
    <h2 class="mb-4">Promotions!!!</h2>

    @if (Model != null && Model.Any())
    {
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                @foreach (var promotion in Model)
                {
                    <div class="swiper-slide">
                        <div class="card h-100 shadow-sm">
                            @if (!string.IsNullOrEmpty(promotion.Image))
                            {
                                <img src="@promotion.Image" class="card-img-top" alt="@promotion.Title" style="max-height:200px;object-fit:cover;">
                            }
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@promotion.Title</h5>
                                <p class="card-text text-muted">@promotion.Detail</p>
                                @if (promotion.DiscountLevel.HasValue)
                                {
                                    <p class="card-text"><strong>Discount:</strong> @promotion.DiscountLevel.Value%</p>
                                }
                                <div class="mt-auto">
                                    <small class="text-muted d-block">Start: @promotion.StartTime?.ToString("yyyy-MM-dd HH:mm")</small>
                                    <small class="text-muted d-block">End: @promotion.EndTime?.ToString("yyyy-MM-dd HH:mm")</small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- Add Pagination -->
            <div class="swiper-pagination"></div>
            <!-- Add Navigation -->
            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
        </div>
    }
    else
    {
        <p class="alert alert-info">No active promotions found.</p>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <script>
        var swiper = new Swiper('.mySwiper', {
            slidesPerView: 1,
            spaceBetween: 30,
            loop: true,
            pagination: {
                el: '.swiper-pagination',
                clickable: true,
            },
            navigation: {
                nextEl: '.swiper-button-next',
                prevEl: '.swiper-button-prev',
            },
            breakpoints: {
                768: { slidesPerView: 2 },
                992: { slidesPerView: 3 }
            }
        });
    </script>
} 