@using MovieTheater.Models
@model List<Promotion>

@{
    ViewData["Title"] = "Promotions List";
}

<div class="container mt-4">
    <h2 class="mb-4">Promotions</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var promotion in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(promotion.Image))
                        {
                            <img src="@promotion.Image" class="card-img-top" alt="@promotion.Title">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@promotion.Title</h5>
                            <p class="card-text text-muted">@promotion.Detail</p>
                            @if (promotion.DiscountLevel.HasValue)
                            {
                                <p class="card-text"><strong>Discount:</strong> @promotion.DiscountLevel.Value%</p>
                            }
                            <div class="mt-auto">
                                <small class="text-muted d-block">Start: @promotion.StartTime?.ToString("yyyy-MM-dd HH:mm")</small>
                                <small class="text-muted d-block">End: @promotion.EndTime?.ToString("yyyy-MM-dd HH:mm")</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p class="alert alert-info">No active promotions found.</p>
    }
</div>

@section Scripts {
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/js/bootstrap.bundle.min.js"></script>
} 