@model IEnumerable<MovieTheater.Models.Promotion>

@{
    ViewData["Title"] = "Current Promotions";
}

<div class="container mt-4">
    <div class="text-center mb-5">
        <h1 class="display-4">Current Promotions</h1>
        <p class="lead">Check out our latest offers and discounts!</p>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <h4 class="alert-heading">No Active Promotions</h4>
            <p>There are currently no active promotions. Please check back later!</p>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var promotion in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(promotion.Image))
                        {
                            <img src="@promotion.Image" class="card-img-top" alt="@promotion.Title"
                                 style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light text-center py-5">
                                <i class="fas fa-ticket-alt fa-4x text-muted"></i>
                            </div>
                        }
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title mb-0">@promotion.Title</h5>
                                <span class="badge bg-primary">@promotion.DiscountLevel% OFF</span>
                            </div>
                            <p class="card-text">@promotion.Detail</p>
                        </div>
                        <div class="card-footer bg-white">
                            <small class="text-muted">
                                <i class="far fa-calendar-alt"></i> Valid from:
                                @promotion.StartTime?.ToString("MMM dd, yyyy") to @promotion.EndTime?.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .card {
            transition: transform 0.2s;
        }

        .card:hover {
            transform: translateY(-5px);
        }

        .badge {
            font-size: 1rem;
        }
    </style>
}
