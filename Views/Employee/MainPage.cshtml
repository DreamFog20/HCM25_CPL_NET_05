@{
    ViewData["Title"] = "Employee Main Page";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 bg-light min-vh-100 border-end">
            <div class="nav flex-column nav-pills">
                <a class="nav-link" href="#" onclick="loadTab('MovieMg')">Movie Management</a>
                <a class="nav-link" href="#" onclick="loadTab('ShowroomMg')">Showroom Management</a>
                <a class="nav-link" href="#" onclick="loadTab('ScheduleMg')">Schedule Management</a>
                <a class="nav-link" href="#" onclick="loadTab('PromotionMg')">Promotion Management</a>
                <a class="nav-link" href="#" onclick="loadTab('TicketSellingMg')">Ticket Selling Management</a>
            </div>
        </div>

        <!-- Tab Content -->
        <div class="col-md-9 col-lg-10 p-4">
            <div id="tabContent">
                Loading...
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    function loadTab(tabName) {
        $('.nav-link').removeClass('active');
        $(`a.nav-link:contains(${tabName.replace('Mg', ' Management')})`).addClass('active');
        $('#tabContent').load(`/Employee/LoadTab?tab=${tabName}`);
    }
        $(document).ready(function () {
        var tabToLoad = '@ViewData["ActiveTab"]' || 'MovieMg';
        loadTab(tabToLoad);
    });
</script>


