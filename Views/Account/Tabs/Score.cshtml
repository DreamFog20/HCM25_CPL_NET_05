@model List<MovieTheater.ViewModels.ScoreHistoryViewModel>
@{
    ViewData["Title"] = "Score History";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Score History</h2>

    <form asp-controller="Score" asp-action="ScoreHistory" method="post" class="row g-3 border p-3 shadow-sm rounded bg-light">
        <div class="col-md-4">
            <label class="form-label">From Date</label>
            <input type="date" name="fromDate" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label class="form-label">To Date</label>
            <input type="date" name="toDate" class="form-control" required />
        </div>
        <div class="col-md-4">
            <label class="form-label d-block">Score Type</label>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="historyType" value="add" checked />
                <label class="form-check-label">Score Adding</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="historyType" value="use" />
                <label class="form-check-label">Score Using</label>
            </div>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">View Score</button>
        </div>
    </form>

    <hr />

    @if (ViewBag.Message != null)
    {
        <div class="alert alert-warning mt-3 text-center">@ViewBag.Message</div>
    }
    else if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped mt-3">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Movie</th>
                    <th class="text-end">Score</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DateCreated.ToString("dd/MM/yyyy")</td>
                        <td>@item.MovieName</td>
                        <td class="text-end">@item.Score</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No data loaded yet. Please filter and click "View Score".</p>
    }

    <hr />
</div>
