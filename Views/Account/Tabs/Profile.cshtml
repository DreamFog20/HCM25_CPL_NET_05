                        }
                        else
                        {
                            var progressRaw = currentUserScore - prevRankPoints;
                            rankProgressPercentage = (pointsForThisTier > 0)
                                ? Math.Min(100, (double)progressRaw / pointsForThisTier * 100)
                                : 100;
                        }
