@using MovieTheater.Models;
@model IEnumerable<Voucher>
@{
    ViewData["Title"] = "My Vouchers";
    
    // Phân loại voucher
    var now = DateTime.Now;
    var activeVouchers = Model?.Where(v => !v.IsUsed.HasValue || !v.IsUsed.Value)
                               .Where(v => v.ExpiryDate > now)
                               .OrderBy(v => v.ExpiryDate)
                               .ToList() ?? new List<Voucher>();
    
    var expiredOrUsedVouchers = Model?.Where(v => (v.IsUsed.HasValue && v.IsUsed.Value) || v.ExpiryDate <= now)
                                      .OrderByDescending(v => v.ExpiryDate)
                                      .ToList() ?? new List<Voucher>();

    // Thống kê
    var totalValue = activeVouchers.Sum(v => v.Value);
    var expiringSoonCount = activeVouchers.Count(v => (v.ExpiryDate - now).Days <= 7);
    var totalVouchers = Model?.Count() ?? 0;
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 text-primary">
            <i class="fas fa-ticket-alt me-3"></i>
            My Vouchers
        </h1>
        <p class="text-muted">Manage your available and used vouchers</p>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-5">
        <div class="col-md-3">
            <div class="stat-card stat-active">
                <div class="stat-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <div class="stat-content">
                    <h3>@activeVouchers.Count</h3>
                    <p>Active Vouchers</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-value">
                <div class="stat-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <div class="stat-content">
                    <h3>@totalValue.ToString("N0")</h3>
                    <p>Total Value (VND)</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-expiring">
                <div class="stat-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <div class="stat-content">
                    <h3>@expiringSoonCount</h3>
                    <p>Expiring Soon</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card stat-total">
                <div class="stat-icon">
                    <i class="fas fa-history"></i>
                </div>
                <div class="stat-content">
                    <h3>@totalVouchers</h3>
                    <p>Total Vouchers</p>
                </div>
            </div>
        </div>
    </div>

         <!-- Filter and sort controls removed -->

    <!-- Active Vouchers Section -->
    <div class="mb-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="h3 text-success">
                <i class="fas fa-star me-2"></i>
                Active Vouchers
                <span class="badge bg-success ms-2">@activeVouchers.Count</span>
            </h2>
            @if (activeVouchers.Any())
            {
                <div class="text-muted" style="color: rgba(255, 255, 255, 0.7) !important; text-shadow: 0 0 5px rgba(255, 255, 255, 0.2);">
                    <i class="fas fa-info-circle me-1"></i>
                    Ordered by expiration date (soonest first)
                </div>
            }
        </div>

        @if (!activeVouchers.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="fas fa-ticket-alt"></i>
                </div>
                <h3>No Active Vouchers</h3>
                <p>You don't have any active vouchers at the moment. Earn vouchers by booking and cancelling tickets!</p>
                <button class="btn btn-primary" onclick="window.location.href='/'">
                    <i class="fas fa-film me-2"></i>
                    Book Tickets Now
                </button>
            </div>
        }
        else
        {
            <div id="activeVouchersGrid" class="voucher-grid">
                @foreach (var voucher in activeVouchers)
                {
                    var daysUntilExpiry = (voucher.ExpiryDate - now).Days;
                    var isExpiringSoon = daysUntilExpiry <= 7;
                    var expiryPercentage = Math.Max(0, Math.Min(100, (30 - daysUntilExpiry) * 100 / 30));
                    
                    <div class="voucher-card active @(isExpiringSoon ? "expiring" : "")" 
                         data-code="@voucher.Code" 
                         data-value="@voucher.Value"
                         data-expiry="@voucher.ExpiryDate.ToString("yyyy-MM-dd")"
                         data-created="@voucher.CreatedDate.ToString("yyyy-MM-dd")">
                        
                        @if (isExpiringSoon)
                        {
                            <div class="expiry-warning">
                                <i class="fas fa-exclamation-triangle me-1"></i>
                                Expires in @daysUntilExpiry day@(daysUntilExpiry == 1 ? "" : "s")
                            </div>
                        }
                        
                        <div class="voucher-image">
                            @if (!string.IsNullOrEmpty(voucher.Image))
                            {
                                <img src="@voucher.Image" alt="Voucher Image">
                            }
                            else
                            {
                                <div class="voucher-placeholder">
                                    <i class="fas fa-ticket-alt"></i>
                                </div>
                            }
                            <div class="voucher-overlay">
                                <!-- Overlay removed - functionality simplified -->
                            </div>
                        </div>
                        
                        <div class="voucher-content">
                            <div class="voucher-header">
                                <div class="voucher-code">
                                    <span class="code-label">CODE</span>
                                    <span class="code-value">@voucher.Code</span>
                                </div>
                                <div class="voucher-value">
                                    <i class="fas fa-coins"></i>
                                    <span>@voucher.Value.ToString("N0") VND</span>
                                </div>
                            </div>
                            
                            <div class="voucher-dates">
                                <div class="date-item">
                                    <i class="fas fa-calendar-plus"></i>
                                    <span>Created: @voucher.CreatedDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="date-item">
                                    <i class="fas fa-calendar-times"></i>
                                    <span>Expires: @voucher.ExpiryDate.ToString("dd/MM/yyyy")</span>
                                </div>
                            </div>
                            
                            @if (isExpiringSoon)
                            {
                                <div class="expiry-progress">
                                    <div class="progress">
                                        <div class="progress-bar bg-warning" 
                                             style="width: @expiryPercentage%"></div>
                                    </div>
                                    <small class="text-warning">@daysUntilExpiry days remaining</small>
                                </div>
                            }
                            
                            <div class="voucher-status">
                                <span class="status-badge active">
                                    <i class="fas fa-check-circle me-1"></i>
                                    Ready to Use
                                </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Used or Expired Vouchers Section -->
    @if (expiredOrUsedVouchers.Any())
    {
        <div class="mb-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="h3 text-secondary">
                    <i class="fas fa-history me-2"></i>
                    Used or Expired Vouchers
                    <span class="badge bg-secondary ms-2">@expiredOrUsedVouchers.Count</span>
                </h2>
                <button class="btn btn-outline-secondary btn-sm" type="button" 
                        data-bs-toggle="collapse" data-bs-target="#expiredVouchers">
                    <i class="fas fa-chevron-down me-1"></i>
                    Toggle View
                </button>
            </div>

            <div class="collapse show" id="expiredVouchers">
                <div class="voucher-grid">
                    @foreach (var voucher in expiredOrUsedVouchers)
                    {
                        var isExpired = voucher.ExpiryDate <= now;
                        var isUsed = voucher.IsUsed.HasValue && voucher.IsUsed.Value;
                        
                        <div class="voucher-card inactive" 
                             data-code="@voucher.Code" 
                             data-value="@voucher.Value"
                             data-expiry="@voucher.ExpiryDate.ToString("yyyy-MM-dd")"
                             data-created="@voucher.CreatedDate.ToString("yyyy-MM-dd")">
                            
                            <div class="voucher-image">
                                @if (!string.IsNullOrEmpty(voucher.Image))
                                {
                                    <img src="@voucher.Image" alt="Voucher Image" class="grayscale">
                                }
                                else
                                {
                                    <div class="voucher-placeholder inactive">
                                        <i class="fas fa-ticket-alt"></i>
                                    </div>
                                }
                                <div class="voucher-overlay">
                                    <!-- Overlay removed - functionality simplified -->
                                </div>
                            </div>
                            
                            <div class="voucher-content">
                                <div class="voucher-header">
                                    <div class="voucher-code">
                                        <span class="code-label">CODE</span>
                                        <span class="code-value">@voucher.Code</span>
                                    </div>
                                    <div class="voucher-value">
                                        <i class="fas fa-coins"></i>
                                        <span>@voucher.Value.ToString("N0") VND</span>
                                    </div>
                                </div>
                                
                                <div class="voucher-dates">
                                    <div class="date-item">
                                        <i class="fas fa-calendar-plus"></i>
                                        <span>Created: @voucher.CreatedDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                    <div class="date-item">
                                        <i class="fas fa-calendar-times"></i>
                                        <span>Expired: @voucher.ExpiryDate.ToString("dd/MM/yyyy")</span>
                                    </div>
                                </div>
                                
                                <div class="voucher-status">
                                    @if (isUsed)
                                    {
                                        <span class="status-badge used">
                                            <i class="fas fa-check-double me-1"></i>
                                            Used
                                        </span>
                                    }
                                    else if (isExpired)
                                    {
                                        <span class="status-badge expired">
                                            <i class="fas fa-times-circle me-1"></i>
                                            Expired
                                        </span>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>

<!-- Modal and Toast removed - functionality simplified -->

