@model IEnumerable<Employee>

<div class="text-center mb-2">
    <h2>Employee List</h2>
</div>
<div class="row">
    <div class="col">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-sm btn-primary">Create an Employee</a>
    </div>
    <div class="col">
        <form id="searchForm" class="mb-4 d-flex justify-content-center" onsubmit="event.preventDefault(); searchEmployees();">
            <input type="hidden" name="tab" value="EmployeeMg" />
            <div class="input-group" style="max-width: 600px;">
                <input type="text" id="searchKeyword" name="keyword" value="@ViewBag.Keyword" maxlength="50" class="form-control" placeholder="🔍 Search by name, email, phone, etc..." />
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>FULL NAME</th>
            <th>IDENTITY CARD</th>
            <th>EMAIL</th>
            <th>PHONE</th>
            <th>ADDRESS</th>
            <th>STATUS</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td colspan="8" class="text-center text-danger">No employees found.</td>
            </tr>
        }
        else
        {
            @foreach (var employee in Model)
            {
                <tr>
                    <td>@employee.EmployeeId</td>
                    <td>@employee.Account?.FullName</td>
                    <td>@employee.Account?.IdentityCard</td>
                    <td>@employee.Account?.Email</td>
                    <td>@employee.Account?.PhoneNumber</td>
                    <td>@employee.Account?.Address</td>
                    <td>
                        <span class="badge @(employee.Status ? "bg-success" : "bg-danger")">
                            @(employee.Status ? "Active" : "Inactive")
                        </span>
                    </td>
                    <td>
                        <div class="d-flex align-items-center gap-2">
                            <form method="post" action="@Url.Action("ToggleStatus", "Employee", new { id = employee.EmployeeId })"
                                  style="display: inline;" onsubmit="return confirm('Are you sure you want to change the status?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm @(employee.Status ? "btn-outline-success" : "btn-outline-danger")" 
                                        title="@(employee.Status ? "Deactivate" : "Activate")">
                                    <i class="bi @(employee.Status ? "bi-toggle-on" : "bi-toggle-off")"></i>
                                </button>
                            </form>
                            <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-sm btn-primary">Edit</a>
                            <form asp-action="Delete" asp-controller="Employee" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                                <input type="hidden" name="id" value="@employee.EmployeeId" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<partial name="_ToastMessages" />
