@model IEnumerable<Employee>

<div class="text-center mb-2">
    <h2>Employee List</h2>
</div>

<div class="text-center mb-2">
    <a asp-controller="Employee" asp-action="Create" class="btn btn-sm btn-primary">Create an Employee</a>
</div>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th style="width: 150px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.EmployeeId</td>
                <td>@employee.Account?.FullName</td>

                <td>
                    <div class="d-flex align-items-center gap-2">
                    <a href="@Url.Action("Edit", "Employee", new { id = employee.EmployeeId })" class="btn btn-sm btn-primary">Edit</a>
                    <form asp-action="Delete" asp-controller="Employee" method="post" onsubmit="return confirm('Are you sure you want to delete this employee?');">
                        <input type="hidden" name="id" value="@employee.EmployeeId" />
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<partial name="_ToastMessages" />
