@model MovieTheater.ViewModels.ShowtimeManagementViewModel

<link rel="stylesheet" href="/css/showtime.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<div style="background-color: white !important; padding-bottom: 10px; padding-top: 10px">
    <h2 class="text-center mb-3 text-black">Showtime List</h2>

    <div class="container-fluid mb-5">
        <div class="row">
            <div class="col-3" style="margin-left: 3rem">
                <div>
                    <form method="get" asp-action="ShowtimeMg" asp-controller="Admin" class="mb-4 text-center" id="dateNavForm">
                        <input type="hidden" id="calendarInput" name="date" value="@Model.SelectedDate.ToString("dd/MM/yyyy")" />
                        <div id="calendarContainer"></div>
                    </form>
                </div>
                
                <!-- Quick Actions Section -->
                <div class="quick-actions mt-4" style="margin-right: 3rem">
                    <h6 class="text-center mb-3 text-dark">Quick Actions</h6>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary btn-sm" onclick="addNewShowtime()">
                            <i class="fas fa-plus"></i> Add Showtime
                        </button>

                    </div>
                </div>
                
                <!-- Today's Summary -->
                <div class="today-summary mt-4" style="margin-right: 3rem">
                    <h6 class="text-center mb-3 text-dark">Today's Summary</h6>
                    <div class="card">
                        <div class="card-body p-3">
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Total Shows:</span>
                                <span class="fw-bold" id="totalShows">0</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2">
                                <span class="text-muted">Screens Used:</span>
                                <span class="fw-bold" id="screensUsed">0</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="text-muted">Duration:</span>
                                <span class="fw-bold" id="totalDuration">0h</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-8" style="overflow: hidden">
                <div class="selected-date-display text-center mb-2" style="display: none;">
                    <strong>Selected date:</strong>
                    <span id="selectedDateDisplay">@Model.SelectedDate.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="timeline-container">
                    <div class="timeline">
                        <!-- Time markers from 9:00 to 24:00 -->
                        @for (int hour = 9; hour < 24; hour++)
                        {
                            <div class="time-marker" data-hour="@hour">
                                <div class="time-label">@(hour.ToString("00")):00</div>
                                <div class="timeline-events">
                                    <!-- Screen columns will be created dynamically by JavaScript -->
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Add Showtime Modal -->
<div class="modal fade" id="quickAddShowtimeModal" tabindex="-1" aria-labelledby="quickAddShowtimeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered text-black">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="quickAddShowtimeModalLabel">Quick Add Showtime</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Movie Selection -->
                <div class="row mb-3">
                        <h6>Select Movie</h6>
                        <div id="movieSelectionContainer">
                            <!-- Movie selection will be loaded here -->
                        </div>
                </div>
                <div class="row mb-3"> 
                    <div class="col-md-6">
                        <h6>Select Version</h6>
                        <div id="versionSelectionContainer">
                            <!-- Version selection will be loaded here -->
                        </div>
                    </div>

                    <div class="col-md-6">
                        <h6>Select Cinema Room</h6>
                        <div id="cinemaRoomContainer">
                            <select class="form-select" id="cinemaRoomSelect" disabled>
                                <option value="">-- Select a Cinema Room --</option>
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Showtime Configuration -->
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="showDateSelect" class="form-label">Show Date</label>
                        <select class="form-select" id="showDateSelect" disabled>
                            <option value="">-- Select a Show Date --</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label for="scheduleSelect" class="form-label">Schedule Time</label>
                        <select class="form-select" id="scheduleSelect" disabled>
                            <option value="">-- Select a Schedule --</option>
                        </select>
                    </div>
                </div>

                <!-- Add Button -->
                <div class="row">
                    <div class="col-6">
                        <button type="button" class="btn btn-primary" id="addMovieShowBtn" disabled>
                            <i class="fas fa-plus"></i> Add Showtime
                        </button>
                    </div>
                    <div class="col-6 text-end">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Hidden inputs for movie data -->
<input type="hidden" id="movieId" value="" />
<input type="hidden" id="movieDuration" value="" />

<!-- Pass data from Razor to JavaScript -->
<script>
    // Set global variables for the JavaScript file to use
    window.selectedDate = '@Model.SelectedDate.ToString("yyyy-MM-dd")';
    window.movieShowSummary = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.MovieShowSummaryByDate as Dictionary<DateOnly, List<string>> ?? new Dictionary<DateOnly, List<string>>()));
    window.fetchedMonths = {};
    // Mark the initial month as fetched
    const initialDate = new Date('@Model.SelectedDate.ToString("yyyy-MM-dd")');
    window.fetchedMonths[`${initialDate.getFullYear()}-${initialDate.getMonth()}`] = true;
</script>
<script src="~/js/movie-show.js" asp-append-version="true"></script>
<script src="~/js/showtimemg.js" asp-append-version="true"></script>
