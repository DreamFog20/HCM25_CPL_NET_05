@{
    ViewData["Title"] = "Admin Main Page";
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.css" />

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3 col-lg-2 bg-light min-vh-100 border-end">
            <div class="nav flex-column nav-pills">
                <a class="nav-link active" href="#" onclick="loadTab('Dashboard')">Dashboard</a>
                <a class="nav-link" href="#" onclick="loadTab('MemberMg')">Member Management</a>
                <a class="nav-link" href="#" onclick="loadTab('EmployeeMg')">Employee Management</a>
                <a class="nav-link" href="#" onclick="loadTab('MovieMg')">Movie Management</a>
                <a class="nav-link" href="#" onclick="loadTab('ShowroomMg')">Showroom Management</a>
                <a class="nav-link" href="#" onclick="loadTab('ScheduleMg')">Schedule Management</a>
                <a class="nav-link" href="#" onclick="loadTab('PromotionMg')">Promotion Management</a>
                <a class="nav-link" href="#" onclick="loadTab('BookingMg')">Booking Management</a>
            </div>
        </div>
        <div class="col-md-9 col-lg-10 p-4">
            <div id="tabContent"></div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    window.initDashboardCharts = function(model) {
      const revCtx = document.getElementById('revenueChart')?.getContext('2d');
      if (revCtx && model.revenueDates) {
        new Chart(revCtx, {
          type: 'line',
          data: {
            labels: model.revenueDates,
            datasets: [{
              label: 'Revenue',
              data: model.revenueValues,
              fill: true,
              tension: 0.4
            }]
          }
        });
      }
      const bookCtx = document.getElementById('bookingChart')?.getContext('2d');
      if (bookCtx && model.bookingDates) {
        new Chart(bookCtx, {
          type: 'line',
          data: {
            labels: model.bookingDates,
            datasets: [{
              label: 'Bookings',
              data: model.bookingValues,
              fill: true,
              tension: 0.4
            }]
          }
        });
      }
    };

    function loadTab(tabName, keyword='') {
      $('.nav-link').removeClass('active');
      $(`a.nav-link:contains(${tabName.replace('Mg',' Management')})`).addClass('active');
      const params = new URLSearchParams({ tab: tabName });
      if (keyword) params.append('keyword', keyword);
      $('#tabContent').load(`/Admin/LoadTab?${params}`, function(res, status) {
        if (status === 'error') $('#tabContent').html('<div class="alert alert-danger">Failed loading</div>');
        else if (tabName === 'Dashboard') {
          const el = document.getElementById('dashboard-data');
          if (el) {
            const model = JSON.parse(el.textContent);
            window.initDashboardCharts(model);
          }
        }
      });
    }

    function searchEmployees() { loadTab('EmployeeMg', document.getElementById('searchKeyword')?.value ?? ''); }
    function searchBooking() { loadTab('BookingMg', document.getElementById('searchKeyword')?.value ?? ''); }

    $(document).ready(function() { loadTab('@ViewData["ActiveTab"]' || 'Dashboard'); });
</script>

