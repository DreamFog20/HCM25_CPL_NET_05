@model MovieTheater.ViewModels.TicketDetailsViewModel
@using System.Linq;
@{

    ViewData["Title"] = "Ticket Information";
    var invoice = Model.Booking;
    var movieName = invoice.MovieShow.Movie.MovieNameEnglish;
    var screen = invoice.MovieShow.CinemaRoom.CinemaRoomName;
    var version = invoice.MovieShow.Version.VersionName;
    var showDate = invoice.MovieShow.ShowDate;
    var showTime = invoice.MovieShow.Schedule.ScheduleTime;
    var ticketId = invoice.InvoiceId;
    var totalPrice = invoice.TotalMoney?.ToString("N0");
    var seatString = invoice.Seat;
    var addScore = invoice.AddScore ?? 0;
    var useScore = invoice.UseScore ?? 0;
    var bookingDate = invoice.BookingDate?.ToString("yyyy-MM-dd HH:mm");
    var seatDetails = Model.SeatDetails ?? new List<MovieTheater.ViewModels.SeatDetailViewModel>();
    var foodDetails = Model.FoodDetails ?? new List<MovieTheater.ViewModels.FoodViewModel>();
    decimal totalFoodPrice = Model.TotalFoodPrice;
    
    // Use only invoice-time values for breakdown
    decimal subtotal = seatDetails?.Sum(s => s.PriceAfterPromotion ?? s.Price) ?? 0;
    decimal addedScoreValue = addScore * 1000;
    decimal usedScoreValue = useScore * 1000;
    // This subtotal is already after all discounts (promotion, rank, voucher, points)
    decimal seatPriceFromDB = invoice.TotalMoney ?? 0;
    // decimal rankDiscount = subtotal - usedScoreValue - totalPriceValue;
    // Get member ID if available
    var memberId = invoice.Account?.Members.FirstOrDefault()?.MemberId;
    var qrStaffUrl = $"{Context.Request.Scheme}://{Context.Request.Host}/QRCode/Scanner?invoiceId={Model.Booking.InvoiceId}";
    decimal rankDiscountPercent = invoice.RankDiscountPercentage ?? 0;
    decimal rankDiscount = 0;
    if (rankDiscountPercent > 0)
    {
        rankDiscount = subtotal * (rankDiscountPercent / 100m);
    }
    // SỬA: Tính toán đúng logic như BookingPriceCalculationService
    decimal seatTotalAfterRankAndScore = subtotal - rankDiscount - usedScoreValue;
    if (seatTotalAfterRankAndScore < 0) seatTotalAfterRankAndScore = 0;
    decimal seatAndFoodTotal = seatTotalAfterRankAndScore + totalFoodPrice;
    decimal runningTotal = seatAndFoodTotal - (Model.VoucherAmount ?? 0m);
    if (runningTotal < 0) runningTotal = 0;
}

@section Styles {
    <link rel="stylesheet" href="~/css/ticket-styles.css" />
}

<div class="ticket-page-container">
    <div class="ticket-page-wrapper">
        <!-- Header -->
        <div class="ticket-header">
            <div class="ticket-header-content">
                <div class="ticket-header-left">
                    <div class="ticket-header-icon">
                        <i class="fas fa-film ticket-icon"></i>
                    </div>
                    <div class="ticket-header-text">
                        <h1>Ticket Information</h1>
                        <p>Booking ID: @ticketId</p>
                    </div>
                </div>
                <span class="ticket-status-badge @(invoice.Status == MovieTheater.Models.InvoiceStatus.Completed && !invoice.Cancel ? "ticket-status-completed" : invoice.Status == MovieTheater.Models.InvoiceStatus.Completed && invoice.Cancel ? "ticket-status-cancelled" : "ticket-status-secondary")">
                    @(invoice.Status == MovieTheater.Models.InvoiceStatus.Completed && !invoice.Cancel ? "Completed" : invoice.Status == MovieTheater.Models.InvoiceStatus.Completed && invoice.Cancel ? "Canceled" : "Not Paid")
                </span>
            </div>
        </div>

        <div class="ticket-grid">
            <!-- Main Content -->
            <div class="ticket-main-content">
                <!-- Movie Information -->
                <div class="ticket-card-modern">
                    <div class="ticket-card-header">
                        <h5 class="ticket-card-title">
                            <i class="fas fa-film ticket-icon"></i>
                            <span>Movie & Show Details</span>
                        </h5>
                    </div>
                    <div class="ticket-card-body">
                        <div class="ticket-info-grid">
                            <div class="ticket-info-item">
                                <i class="fas fa-film ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Movie</p>
                                    <p>@movieName</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-calendar ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Date</p>
                                    <p>@showDate</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-clock ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Time</p>
                                    <p>@showTime</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-map-marker-alt ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Screen</p>
                                    <p>@screen</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-star ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Version</p>
                                    <p>@version</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-calendar ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Booking Time</p>
                                    <p>@(DateTime.Parse(bookingDate).ToString("dd/MM/yyyy HH:mm"))</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seats -->
                <div class="ticket-card-modern">
                    <div class="ticket-card-header">
                        <h5 class="ticket-card-title">
                            <i class="fas fa-users ticket-icon"></i>
                            <span>Seat Information</span>
                        </h5>
                    </div>
                    <div class="ticket-card-body">
                        <div class="ticket-table-container">
                            <table class="ticket-table">
                                <thead>
                                    <tr>
                                        <th>Seat</th>
                                        <th>Type</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (seatDetails != null && seatDetails.Any())
                                    {
                                        foreach (var seat in seatDetails)
                                        {
                                            <tr>
                                                <td>@seat.SeatName</td>
                                                <td>
                                                    <span class="ticket-badge ticket-badge-outline">@seat.SeatType</span>
                                                </td>
                                                <td>
                                                    @if (seat.OriginalPrice.HasValue && seat.PriceAfterPromotion.HasValue && seat.OriginalPrice.Value > seat.PriceAfterPromotion.Value)
                                                    {
                                                        <div class="ticket-price-item">
                                                            <span class="ticket-price-discount">@seat.OriginalPrice.Value.ToString("N0") VND</span>
                                                            <span class="ticket-price-value">@seat.PriceAfterPromotion.Value.ToString("N0") VND</span>
                                                        </div>
                                                    }
                                                    else if (seat.OriginalPrice.HasValue)
                                                    {
                                                        <span class="ticket-price-value">@seat.OriginalPrice.Value.ToString("N0") VND</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="ticket-price-value">@seat.Price.ToString("N0") VND</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else if (!string.IsNullOrEmpty(seatString))
                                    {
                                        <tr>
                                            <td colspan="3">@seatString</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Food & Drinks -->
                @if (foodDetails.Any())
                {
                    <div class="ticket-card-modern">
                        <div class="ticket-card-header">
                            <h5 class="ticket-card-title">
                                <i class="fas fa-shopping-cart ticket-icon"></i>
                                <span>Food & Drinks</span>
                            </h5>
                        </div>
                        <div class="ticket-card-body">
                            <div class="ticket-table-container">
                                <table class="ticket-table">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var food in foodDetails)
                                        {
                                            <tr>
                                                <td>@food.Name</td>
                                                <td>@food.Quantity</td>
                                                <td>
                                                    @if (food.OriginalPrice > food.Price)
                                                    {
                                                        <div class="ticket-price-item">
                                                            <span class="ticket-price-discount">@food.OriginalPrice.ToString("N0") VND</span>
                                                            <span class="ticket-price-value">@food.Price.ToString("N0") VND</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="ticket-price-value">@food.Price.ToString("N0") VND</span>
                                                    }
                                                </td>
                                                <td>@((food.Price * food.Quantity).ToString("N0")) VND</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3">Food Total:</td>
                                            <td><strong>@totalFoodPrice.ToString("N0") VND</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Price Breakdown -->
                @if (subtotal > 0)
                {
                    <div class="ticket-card-modern">
                        <div class="ticket-card-header">
                            <h5 class="ticket-card-title">
                                <i class="fas fa-gift ticket-icon"></i>
                                <span>Price Breakdown</span>
                            </h5>
                        </div>
                        <div class="ticket-card-body">
                            <div class="ticket-price-breakdown">
                                <div class="ticket-price-item">
                                    <span class="ticket-price-label">Seat Price</span>
                                    <span class="ticket-price-value">@subtotal.ToString("N0") VND</span>
                                </div>

                                @if (rankDiscount > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Rank Discount (@rankDiscountPercent.ToString("0.##")%)</span>
                                        <span class="ticket-price-discount">-@rankDiscount.ToString("N0") VND</span>
                                    </div>
                                }

                                @if (useScore > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Points Used</span>
                                        <span class="ticket-price-discount">-@useScore (@usedScoreValue.ToString("N0") VND)</span>
                                    </div>
                                }

                                @if (totalFoodPrice > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">+ Food & Drinks</span>
                                        <span class="ticket-price-addition">+@totalFoodPrice.ToString("N0") VND</span>
                                    </div>
                                }

                                @if ((Model.VoucherAmount ?? 0m) > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Voucher</span>
                                        <span class="ticket-price-discount">-@((Model.VoucherAmount ?? 0m).ToString("N0")) VND</span>
                                    </div>
                                }

                                <div class="ticket-price-divider"></div>

                                <div class="ticket-total-section">
                                    <span class="ticket-total-label">Total Amount</span>
                                    <span class="ticket-total-value">@runningTotal.ToString("N0") VND</span>
                                </div>

                                @if (addScore > 0)
                                {
                                    <div class="ticket-points-earned">
                                        <span class="ticket-points-label">+ Points Earned</span>
                                        <span class="ticket-points-value">+@addScore (@addedScoreValue.ToString("N0") VND)</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Action Buttons -->
                <div class="ticket-btn-group">
                    <a href="/MyAccount/MainPage?tab=Profile" class="ticket-btn ticket-btn-primary ticket-btn-full">
                        <i class="fas fa-arrow-left"></i> Back to Profile
                    </a>
                    @if (Model.Booking.Status == MovieTheater.Models.InvoiceStatus.Completed && !Model.Booking.Cancel)
                    {
                        <form asp-controller="Ticket" asp-action="Cancel" asp-route-id="@Model.Booking.InvoiceId"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to cancel this ticket? You will receive a voucher equal to the ticket price.');">
                            <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                            <button type="submit" class="ticket-btn ticket-btn-outline-danger ticket-btn-full">
                                <i class="fas fa-times"></i> Cancel Ticket
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- QR Code Section -->
            <div class="ticket-qr-section">
                <div class="ticket-qr-card">
                    <div class="ticket-qr-header">
                        <h5 class="ticket-qr-title">
                            <i class="fas fa-qrcode ticket-icon"></i>
                            <span>QR Code</span>
                        </h5>
                        <p class="ticket-qr-subtitle">Scan for ticket information</p>
                    </div>
                    <div class="ticket-qr-body">
                        <div class="ticket-qr-container">
                            <canvas id="qrcode-staff"></canvas>
                        </div>
                        <button id="downloadQRStaff" class="ticket-btn ticket-btn-success ticket-btn-full">
                            <i class="fas fa-download"></i> Download QR Code
                        </button>
                        <p class="ticket-qr-description">Present this QR code at the cinema for quick entry</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/qrious@4.0.2/dist/qrious.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var qrStaffUrl = '@qrStaffUrl';
        var qrStaff = new QRious({
            element: document.getElementById('qrcode-staff'),
            value: qrStaffUrl,
            size: 200
        });
        document.getElementById('downloadQRStaff').onclick = function() {
            var canvas = document.getElementById('qrcode-staff');
            var link = document.createElement('a');
            link.href = canvas.toDataURL();
            link.download = 'ticket-info-qr.png';
            link.click();
        }
    });
</script>
