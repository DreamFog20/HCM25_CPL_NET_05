@model MovieTheater.Models.Invoice
@using System.Linq;
@{
    ViewData["Title"] = "Ticket Information";
    var invoice = Model;
    var movieName = invoice.MovieName;
    var screen = invoice.ScheduleSeats.FirstOrDefault()?.MovieShow?.CinemaRoom?.CinemaRoomName;
    var showDate = invoice.ScheduleShow?.ToString("yyyy-MM-dd");
    var showTime = invoice.ScheduleShowTime;
    var ticketId = invoice.InvoiceId;
    var totalPrice = invoice.TotalMoney?.ToString("N0");
    var seatString = invoice.Seat;
    var addScore = invoice.AddScore ?? 0;
    var useScore = invoice.UseScore ?? 0;
    var bookingDate = invoice.BookingDate?.ToString("dd/MM/yyyy HH:mm");
    var seatDetails = ViewBag.SeatDetails as List<MovieTheater.ViewModels.SeatDetailViewModel>;
    // Use only invoice-time values for breakdown
    decimal subtotal = seatDetails?.Sum(s => s.Price) ?? 0;
    decimal usedScoreValue = useScore * 1000;
    decimal addedScoreValue = addScore * 1000;
    decimal totalPriceValue = invoice.TotalMoney ?? 0;
    decimal rankDiscount = subtotal - usedScoreValue - totalPriceValue;
    // Get member ID if available
    var memberId = invoice.Account?.Members.FirstOrDefault()?.MemberId;
}
<style>
    .ticket-success-header {
        background: #e3fcec;
        border-radius: 12px 12px 0 0;
        padding: 32px 0 16px 0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
        padding-left: 2rem;
        padding-right: 2rem;
    }
    .ticket-success-header h2 {
        font-weight: bold;
        margin-bottom: 0;
        text-align: left;
    }
    .status-badge {
        display: inline-block;
        padding: 0.35em 1.2em;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 1.2em;
        color: #fff;
        margin-left: 1rem;
    }
    .status-completed {
        background-color: #28a745;
    }
    .status-cancelled {
        background-color: #dc3545;
    }
    .ticket-info-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.1rem;
        font-size: 0.98rem;
        margin-right: 0.5rem;
    }
    .ticket-info-value {
        background: #f8f9fa;
        border: none;
        border-bottom: 1px solid #e0e0e0;
        border-radius: 0;
        padding: 0.2rem 0.5rem;
        font-size: 1rem;
        color: #222;
        opacity: 1;
        cursor: not-allowed;
        box-shadow: none;
        min-width: 80px;
        margin-right: 1.5rem;
        margin-bottom: 0.2rem;
    }
    .ticket-card {
        max-width: 700px;
        margin: 0 auto;
        border-radius: 12px;
        overflow: hidden;
    }
    .btn-ticket-back {
        background: #007bff;
        color: #fff;
        font-weight: 500;
        border-radius: 6px;
        padding: 0.6rem 2.2rem;
        font-size: 1.1rem;
        margin-top: 1.5rem;
    }
    .btn-ticket-back:hover {
        background: #0056b3;
        color: #fff;
    }
    .ticket-row {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        margin-bottom: 0.3rem;
    }
    .ticket-row .ticket-info-label {
        min-width: 90px;
    }
    .ticket-row .ticket-info-value {
        flex: 1 1 120px;
        min-width: 80px;
        margin-right: 2rem;
    }
    .ticket-section-title {
        margin-top: 1.2rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .ticket-total-row {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .ticket-total-label {
        font-weight: 600;
        margin-right: 0.5rem;
    }
    .ticket-total-value {
        font-weight: 600;
        font-size: 1.1rem;
        color: #007bff;
    }
</style>
<div class="container mt-4">
    <div class="ticket-card card shadow p-0">
        <div class="ticket-success-header">
            <h2 class="mb-0">Ticket Information</h2>
            <span class="status-badge @(invoice.Status == MovieTheater.Models.InvoiceStatus.Completed ? "status-completed" : "status-cancelled")">
                @(invoice.Status == MovieTheater.Models.InvoiceStatus.Completed ? "Completed" : "Cancelled")
            </span>
        </div>
        <div class="p-4">
            <div class="ticket-section-title">Movie & Show Info</div>
            <div class="ticket-row">
                <label class="ticket-info-label">Movie Name</label>
                <input type="text" class="ticket-info-value" value="@movieName" readonly />
                <label class="ticket-info-label">Screen</label>
                <input type="text" class="ticket-info-value" value="@screen" readonly />
            </div>
            <div class="ticket-row">
                <label class="ticket-info-label">Date</label>
                <input type="text" class="ticket-info-value" value="@showDate" readonly />
                <label class="ticket-info-label">Time</label>
                <input type="text" class="ticket-info-value" value="@showTime" readonly />
            </div>
            <div class="ticket-row">
                <label class="ticket-info-label">Ticket ID</label>
                <input type="text" class="ticket-info-value" value="@ticketId" readonly />
            </div>
            <div class="d-flex flex-row justify-content-between align-items-start" style="gap: 2rem;">
                <div style="flex: 1.5;">
                    <div class="ticket-section-title">Seat(s)</div>
                    <table class="table table-bordered mb-2">
                        <thead>
                            <tr>
                                <th>Seat</th>
                                <th>Type</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (seatDetails != null && seatDetails.Any())
                            {
                                foreach (var seat in seatDetails)
                                {
                                    <tr>
                                        <td>@seat.SeatName</td>
                                        <td>@seat.SeatType</td>
                                        <td>@(seat.Price > 0 ? seat.Price.ToString("N0") + " VND" : "")</td>
                                    </tr>
                                }
                            }
                            else if (!string.IsNullOrEmpty(seatString))
                            {
                                <tr>
                                    <td colspan="3">@seatString</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                @if (subtotal > 0)
                {
                    <div style="flex: 1;">
                        <div class="ticket-section-title">Price Breakdown</div>
                        <table class="table table-borderless mb-2">
                            <tbody>
                                <tr>
                                    <td style="white-space: nowrap;">Subtotal</td>
                                    <td class="text-end" style="white-space: nowrap;">@subtotal.ToString("N0") VND</td>
                                </tr>
                                @if (rankDiscount > 0)
                                {
                                    <tr>
                                        <td style="white-space: nowrap;">- Rank Discount</td>
                                        <td class="text-end" style="white-space: nowrap;">-@rankDiscount.ToString("N0") VND</td>
                                    </tr>
                                }
                                @if (useScore > 0)
                                {
                                    <tr>
                                        <td style="white-space: nowrap;">- Points Used</td>
                                        <td class="text-end" style="white-space: nowrap;">-@useScore (@usedScoreValue.ToString("N0") VND)</td>
                                    </tr>
                                }
                                <tr>
                                    <td class="ticket-total-label">Total Price</td>
                                    <td class="ticket-total-value text-end">@totalPriceValue.ToString("N0") VND</td>
                                </tr>
                                @if (addScore > 0)
                                {
                                    <tr>
                                        <td style="white-space: nowrap; color: #28a745;">+ Points Earned</td>
                                        <td class="text-end" style="white-space: nowrap; color: #28a745;">+@addScore (@addedScoreValue.ToString("N0") VND)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <hr />
            <div class="text-center mt-4">
                <a href="/MyAccount/MainPage?tab=History" class="btn btn-primary fw-bold px-4 me-3" style="min-width: 180px;">
                    <i class="fas fa-arrow-left me-1"></i> Back to History
                </a>
                @if (Model.Status == MovieTheater.Models.InvoiceStatus.Completed)
                    @* && Model.ScheduleShow.HasValue
                    && Model.ScheduleShow.Value.AddHours(-24) > DateTime.Now) *@
                {
                    <form asp-controller="Ticket" asp-action="Cancel" asp-route-id="@Model.InvoiceId"
                          method="post" class="d-inline"
                          onsubmit="return confirm('Are you sure you want to cancel this ticket? You will receive a voucher equal to the ticket price.');">
                        <input type="hidden" name="returnUrl" value="@Context.Request.Path@Context.Request.QueryString" />
                        <button type="submit" class="btn btn-outline-danger fw-bold px-4" style="min-width: 180px;">
                            <i class="fas fa-times me-1"></i> Cancel Ticket
                        </button>
                    </form>
                }
            </div>
        </div>
    </div>
</div>
