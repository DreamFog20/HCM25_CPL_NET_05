@model MovieTheater.Models.Invoice
@{
    ViewData["Title"] = "Ticket Details";
    var showDateTime = Model.MovieShow.ShowDate.ToDateTime(Model.MovieShow.Schedule.ScheduleTime ?? TimeOnly.MinValue);
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Ticket Details</h4>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Movie:</div>
                        <div class="col-md-8">@Model.MovieShow.Movie.MovieNameEnglish</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Show Date:</div>
                        <div class="col-md-8">@Model.MovieShow.ShowDate.ToString("dd/MM/yyyy")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Show Time:</div>
                        <div class="col-md-8">@Model.MovieShow.Schedule.ScheduleTime</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Screen:</div>
                        <div class="col-md-8">@Model.MovieShow.CinemaRoom.CinemaRoomName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Version:</div>
                        <div class="col-md-8">@Model.MovieShow.Version.VersionName</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Seats:</div>
                        <div class="col-md-8">@Model.Seat</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Booking Date:</div>
                        <div class="col-md-8">@Model.BookingDate?.ToString("dd/MM/yyyy HH:mm")</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Total Amount:</div>
                        <div class="col-md-8">@Model.TotalMoney?.ToString("N0") VND</div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4 fw-bold">Status:</div>
                        <div class="col-md-8">
                            @if (Model.Status == 1)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                        </div>
                    </div>
                    @if (Model.AddScore > 0)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Points Earned:</div>
                            <div class="col-md-8">@Model.AddScore points</div>
                        </div>
                    }
                    @if (Model.UseScore > 0)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4 fw-bold">Points Used:</div>
                            <div class="col-md-8">@Model.UseScore points</div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a href="/MyAccount/MainPage?tab=History" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to History
                        </a>
                        @if (Model.Status == 1 && 
                             Model.MovieShow.Schedule.ScheduleTime.HasValue &&
                             showDateTime.AddHours(-24) > DateTime.Now)
                        {
                            <form asp-controller="Ticket" asp-action="Cancel" asp-route-id="@Model.InvoiceId" 
                                  method="post" class="d-inline" 
                                  onsubmit="return confirm('Are you sure you want to cancel this ticket?');">
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-times"></i> Cancel Ticket
                                </button>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .badge {
            font-size: 0.9em;
            padding: 0.5em 0.8em;
        }
    </style>
} 