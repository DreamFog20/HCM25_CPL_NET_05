@{
    var currentStep = ViewBag.CurrentStep != null ? (int)ViewBag.CurrentStep : 1;
    string[] steps = new[] { "Choose Movie", "Select Seats", "Payment", "Confirmed" };
}
<style>
    .booking-progress {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 32px 0 32px 0;
        gap: 0;
        background: none;
        z-index: 10;
        position: relative;
    }
    .booking-progress .step {
        display: flex;
        flex-direction: column;
        align-items: center;
        flex: 1;
        position: relative;
        min-width: 120px;
        z-index: 2;
    }
    .booking-progress .step .circle {
        width: 38px;
        height: 38px;
        border-radius: 50%;
        background: #e9ecef;
        color: #aaa;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.3rem;
        font-weight: 600;
        margin-bottom: 8px;
        border: 3px solid #e9ecef;
        transition: all 0.3s;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }
    .booking-progress .step.active .circle {
        background: #007bff;
        color: #fff;
        border-color: #007bff;
        box-shadow: 0 4px 16px rgba(0,123,255,0.13);
        font-size: 1.4rem;
    }
    .booking-progress .step.completed .circle {
        background: #28a745;
        color: #fff;
        border-color: #28a745;
        font-size: 1.2rem;
    }
    .booking-progress .step .label {
        font-size: 1.05rem;
        color: #aaa;
        font-weight: 500;
        text-align: center;
        transition: color 0.3s;
    }
    .booking-progress .step.active .label {
        color: #007bff;
        font-weight: bold;
    }
    .booking-progress .step.completed .label {
        color: #28a745;
        font-weight: bold;
    }
    .booking-progress .connector {
        flex: 0 0 40px;
        height: 4px;
        background: #e9ecef;
        margin: 0 -4px;
        border-radius: 2px;
        z-index: 1;
        transition: background 0.3s;
    }
    .booking-progress .connector.completed {
        background: #28a745;
    }
    .booking-progress .connector.active {
        background: linear-gradient(90deg, #007bff 60%, #e9ecef 100%);
    }
</style>
<div class="booking-progress">
    @for (int i = 0; i < steps.Length; i++)
    {
        var stepClass = "";
        if (currentStep > i + 1) stepClass = "completed";
        else if (currentStep == i + 1) stepClass = "active";

        <div class="step @stepClass">
            <div class="circle">
                @(currentStep > i + 1 ? Html.Raw("<span style='font-size:1.2em;'>&#10003;</span>") : (i + 1).ToString())
            </div>
            <div class="label">@steps[i]</div>
        </div>
        if (i < steps.Length - 1)
        {
            var connectorClass = "";
            if (currentStep > i + 1) connectorClass = "completed";
            else if (currentStep == i + 1) connectorClass = "active";
            <div class="connector @connectorClass"></div>
        }
    }
</div> 