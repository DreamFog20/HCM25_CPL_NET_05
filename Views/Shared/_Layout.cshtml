@using System.Security.Claims
@{
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var Name = User.FindFirst(ClaimTypes.Name)?.Value;
    var isAuthenticated = User.Identity.IsAuthenticated;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MovieTheater</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MovieTheater.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery.cycle2/2.1.6/jquery.cycle2.min.css" />

    <!-- FontAwesome 5.11.2 CSS (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" />
    <!-- IconPicker 1.5.0 CSS/JS (CDN) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/fontawesome-iconpicker/1.5.0/css/fontawesome-iconpicker.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap" rel="stylesheet">
    @await RenderSectionAsync("Styles", required: false)
</head>

<body>
    <!-- jQuery (first, only once) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- IconPicker 1.5.0 JS (CDN) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/fontawesome-iconpicker/1.5.0/js/fontawesome-iconpicker.min.js"></script>
    <script>
        window.onerror = function(message, source, lineno, colno, error) {
            console.error('Caught global error:');
            console.error('Message:', message);
            console.error('Source:', source);
            console.error('Line:', lineno);
            console.error('Column:', colno);
            console.error('Error object:', error);
            // Return true to prevent the default browser error handling (optional)
            // return true;
        };
    </script>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm app-navbar border-bottom box-shadow mb-0">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="movie-logo-icon" style="display:flex;align-items:center;">
                        <i class='bx bx-movie-play bx-tada main-color' style="font-size:2rem;"></i>
                        <img src="~/image/logo.png" alt="MovieTheater Logo" style="height:40px; width:auto; display:inline-block; vertical-align:middle; margin-left:8px;">
                    </span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Đã xóa mục Home vì logo đã là link về Home -->
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movie" asp-action="MovieList">Movies</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Promotion" asp-action="List">Promotions</a>
                        </li>
                        @if (userRole == "Member")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Booking" asp-action="TicketBooking">Booking</a>
                            </li>
                        }
                    </ul>
                    <ul class="navbar-nav align-items-center">
                        <li class="nav-item me-2">
                            <button id="toggle-dark-mode" class="btn btn-outline-secondary nav-link">🌙 Dark Mode</button>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="padding:0;">
                                    <img src="@(User.FindFirst("Image")?.Value ?? "/image/profile.jpg")" alt="Avatar" class="rounded-circle" style="width:40px; height:40px; object-fit:cover; border:2px solid #eee;">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="profileDropdown">
                                    <li><a class="dropdown-item" href="/MyAccount/MainPage">View Profile</a></li>
                                    <li><a class="dropdown-item" href="/Account/Logout">Logout</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="fade-in" style="padding-top:0;">
        @RenderBody()
    </main>

<partial name="_ToastMessages" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.cycle2/2.1.6/jquery.cycle2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/swiper@8/swiper-bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.cycle2/2.1.6/plugin/jquery.cycle2.swipe.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function() {
            // Initialize and show success toast if it exists
            var toastMessageContainer = document.getElementById('toastMessage');
            if (toastMessageContainer) {
                var toastEl = toastMessageContainer.querySelector('.toast');
                if (toastEl) {
                    var toast = new bootstrap.Toast(toastEl, {
                        autohide: true,
                        delay: 2000 // 2 seconds delay
                    });
                    toast.show();
                }
            }

            // Initialize and show error toast if it exists
            var errorToastContainer = document.getElementById('errorToast');
            if (errorToastContainer) {
                 var toastEl = errorToastContainer.querySelector('.toast');
                 if (toastEl) {
                    var toast = new bootstrap.Toast(toastEl, {
                        autohide: true,
                        delay: 2000 // 2 seconds delay (adjust to 4000 if preferred)
                    });
                    toast.show();
                 }
            }
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // Dark mode toggle
        const darkModeBtn = document.getElementById("toggle-dark-mode");
        const currentMode = localStorage.getItem("theme");
        const navbar = document.querySelector('.app-navbar');
        const content = document.getElementById("content"); // Get the content element

        if (currentMode === "dark") {
            document.body.classList.add("dark-mode");
            navbar.classList.add("dark-mode");
            if (content) { // Check if content element exists
                content.classList.add("dark-mode");
            }
            darkModeBtn.textContent = "☀️ Light Mode";
        }

        darkModeBtn.addEventListener("click", () => {
            document.body.classList.toggle("dark-mode");
            const isDark = document.body.classList.contains("dark-mode");
            darkModeBtn.textContent = isDark ? "☀️ Light Mode" : "🌙 Dark Mode";
            localStorage.setItem("theme", isDark ? "dark" : "light");

            if (isDark) {
                navbar.classList.add('dark-mode');
                if (content) {
                    content.classList.add("dark-mode");
                }
            } else {
                navbar.classList.remove('dark-mode');
                if (content) {
                    content.classList.remove("dark-mode");
                }
            }
        });
    </script>
    <!-- Thông báo hết thời gian ở giữa màn hình, luôn hiển thị nổi bật, nằm ngoài cùng -->
    <div id="timeoutMessage" style="
      display:none;
      align-items:center;
      justify-content:center;
      min-height:100vh;
      width:100vw;
      position:fixed;
      top:0; left:0;
      background:rgba(30,41,59,0.92);
      z-index:99999;
      flex-direction:column;
      text-align:center;
      border: 5px solid yellow;
    ">
      <h2 style='color:yellow'>⏰ Seat hold time has expired!!</h2>
      <p style="color: #fff; font-size: 1.3rem;">Please select a seat again or return to the previous page.</p>
      <button id="retryBtn" class="btn btn-primary mt-3">Choose your seats again</button>
    </div>
    <script>
  document.addEventListener('DOMContentLoaded', function() {
    var retryBtn = document.getElementById('retryBtn');
    if (retryBtn) {
      retryBtn.addEventListener('click', function(e) {
        e.preventDefault();
        window.location.href = '/Booking/TicketBooking';
      });
    }
  });
</script>
</body>
</html>
