    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script>
        // Force dark mode
        document.body.classList.add("dark-mode");
        const navbar = document.querySelector('.app-navbar');
        const content = document.getElementById("content");
        
        if (navbar) {
            navbar.classList.add("dark-mode");
        }
        if (content) {
            content.classList.add("dark-mode");
        }

        // Sticky navbar scroll effect with hero section transparency
        function updateNavbarStyle() {
            const navbar = document.querySelector('.app-navbar');
            const navWrapper = document.querySelector('.nav-wrapper');
            const scrollY = window.scrollY;
            const heroSection = document.querySelector('.hero-section');
            
            if (heroSection) {
                const heroHeight = heroSection.offsetHeight;
                
                // Trong hero section (slide 1) - navbar trong suốt
                if (scrollY < heroHeight) {
                    navbar.classList.remove('scrolled');
                    navbar.classList.add('hero-transparent');
                    if (navWrapper) {
                        navWrapper.classList.add('hero-transparent');
                    }
                } 
                // Sau hero section - navbar có background
                else {
                    navbar.classList.remove('hero-transparent');
                    navbar.classList.add('scrolled');
                    if (navWrapper) {
                        navWrapper.classList.remove('hero-transparent');
                    }
                }
            } else {
                // Fallback nếu không có hero section
                if (scrollY > 50) {
                    navbar.classList.add('scrolled');
                    if (navWrapper) {
                        navWrapper.classList.remove('hero-transparent');
                    }
                } else {
                    navbar.classList.remove('scrolled');
                    if (navWrapper) {
                        navWrapper.classList.add('hero-transparent');
                    }
                }
            }
        }
        
        // Initial call to set navbar style on page load
        updateNavbarStyle();
        
        // Update on scroll
        window.addEventListener('scroll', updateNavbarStyle);
        
        // Set active states for navbar items
        function setActiveNavItems() {
            const currentPath = window.location.pathname;
            const navLinks = document.querySelectorAll('.nav-link');
            const navbarBrand = document.querySelector('.navbar-brand');
            
            // Remove all active classes
            navLinks.forEach(link => link.classList.remove('active'));
            navbarBrand.classList.remove('home-active');
            
            // Set active based on current path
            navLinks.forEach(link => {
                const href = link.getAttribute('href');
                if (href && currentPath.includes(href.replace('~', ''))) {
                    link.classList.add('active');
                }
            });
            
            // Check if we're on home page
            if (currentPath === '/' || currentPath === '/Home' || currentPath === '/Home/Index') {
                navbarBrand.classList.add('home-active');
            }
            
            // Special cases for specific controllers
            if (currentPath.includes('/Movie')) {
                document.querySelector('a[href*="Movie"]')?.classList.add('active');
            } else if (currentPath.includes('/Promotion')) {
                document.querySelector('a[href*="Promotion"]')?.classList.add('active');
            } else if (currentPath.includes('/Booking')) {
                document.querySelector('a[href*="Booking"]')?.classList.add('active');
            } else if (currentPath.includes('/Admin')) {
                document.querySelector('a[href*="Admin"]')?.classList.add('active');
            } else if (currentPath.includes('/Employee')) {
                document.querySelector('a[href*="Employee"]')?.classList.add('active');
            }
        }
        
        // Set active states on page load
        setActiveNavItems();
    </script>
