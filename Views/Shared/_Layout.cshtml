    <!-- Fix for navbar z-index issues -->
    <style>
        /* Ensure navbar has highest z-index */
        .app-navbar {
            z-index: 9999 !important;
            position: relative !important;
        }
        
        /* Ensure dropdown menu appears above all other elements */
        .dropdown-menu {
            z-index: 10000 !important;
        }
        
        /* Ensure dropdown toggle works properly */
        .dropdown-toggle::after {
            display: none !important;
        }
        
        /* Ensure dropdown items are clickable */
        .dropdown-item {
            cursor: pointer;
        }
        
        /* Fix for any potential CSS conflicts from app.css */
        .navbar-nav .dropdown {
            position: relative !important;
        }
        
        .navbar-nav .dropdown-toggle {
            position: relative !important;
        }
        
        /* Override any potential reset from app.css */
        .app-navbar * {
            box-sizing: border-box;
        }
        
        .app-navbar .navbar-nav {
            display: flex !important;
            align-items: center !important;
        }
        
        .app-navbar .nav-item {
            position: relative !important;
        }
        
        /* Ensure navbar brand and links are clickable */
        .navbar-brand,
        .nav-link {
            position: relative !important;
        }
        
        /* Fix for mobile navbar */
        @@media (max-width: 991.98px) {
            .navbar-collapse {
                z-index: 9998 !important;
                position: relative !important;
            }
        }
        
        /* Ensure no element from other pages can cover navbar */
        .hero-section,
        .owl-carousel,
        .overlay,
        .hero-slide-item-content,
        footer.section {
            z-index: 1 !important;
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)
</head>

