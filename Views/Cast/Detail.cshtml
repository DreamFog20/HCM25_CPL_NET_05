@model MovieTheater.ViewModels.CastDetailViewModel

@{
    ViewData["Title"] = "Cast Detail";
}

<style>
    .cast-hero {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        color: white;
        padding: 25px;
        margin-bottom: 20px;
        position: relative;
        overflow: hidden;
        border-radius: 12px;
    }
    
    .cast-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: radial-gradient(circle at 20% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%),
                    radial-gradient(circle at 80% 20%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
        pointer-events: none;
        z-index: 1;
    }
    
    .cast-avatar {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        border: 3px solid rgba(255, 255, 255, 0.2);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    
    .cast-avatar:hover {
        transform: scale(1.05);
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.4);
    }
    
    .info-card {
        background: transparent;
        border-radius: 12px;
        padding: 25px;
        border: none;
        height: 100%;
    }
    
    .info-item {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        padding: 8px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }
    
    .info-item:last-child {
        border-bottom: none;
    }
    
    .info-icon {
        width: 36px;
        height: 36px;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 12px;
        color: white;
        font-size: 14px;
    }
    
    .info-content {
        flex: 1;
    }
    
    .info-label {
        font-weight: 500;
        color: rgba(255, 255, 255, 0.8);
        font-size: 13px;
        margin-bottom: 2px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    
    .info-value {
        font-size: 15px;
        color: white;
        font-weight: 600;
    }
    
    .movie-card {
        background: white;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        height: 100%;
        border: none;
    }
    
    .movie-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 40px rgba(0, 0, 0, 0.15);
    }
    
    .movie-image {
        height: 320px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }
    
    .movie-card:hover .movie-image {
        transform: scale(1.03);
    }
    
    .movie-info {
        padding: 18px;
        text-align: center;
    }
    
    .movie-title {
        font-size: 16px;
        font-weight: 600;
        color: #2c3e50;
        margin-bottom: 6px;
        line-height: 1.3;
    }
    
    .movie-year {
        color: #1e3c72;
        font-weight: 500;
        font-size: 13px;
    }
    
    .section-title {
        font-size: 28px;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 25px;
        text-align: center;
        position: relative;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        bottom: -8px;
        left: 50%;
        transform: translateX(-50%);
        width: 50px;
        height: 3px;
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border-radius: 2px;
    }
    
    .back-btn {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 20px;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(30, 60, 114, 0.3);
        font-size: 14px;
    }
    
    .back-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(30, 60, 114, 0.4);
        color: white;
    }
    
    .description-text {
        line-height: 1.7;
        color: rgba(255, 255, 255, 0.9);
        font-size: 15px;
    }
    
    .card-title {
        color: white;
        font-weight: 600;
        font-size: 18px;
    }
    
    .hero-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: white;
        margin-bottom: 4px;
    }
    
    .hero-subtitle {
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.9);
        font-weight: 400;
    }
    
    @@media (max-width: 768px) {
                 .cast-avatar {
             width: 120px;
             height: 120px;
         }
        
        .section-title {
            font-size: 22px;
        }
        
                 .hero-title {
             font-size: 1.3rem;
         }
        
        .info-card {
            margin-bottom: 20px;
        }
    }
</style>

<div class="container-fluid p-0">
    <!-- Back Button -->
    <div class="container mt-4">
        <a href="javascript:history.back()" class="btn back-btn">
            <i class="fas fa-arrow-left me-2"></i>Back
        </a>
    </div>

    <!-- Hero Section -->
    <div class="container">
        <div class="cast-hero">
            <div class="row align-items-center">
                <div class="col-lg-4 text-center">
                    <img src="@Url.Content(Model.Person.Image)" alt="@Model.Person.Name" class="cast-avatar">
                </div>
                <div class="col-lg-8">
                    <h1 class="hero-title">@Model.Person.Name</h1>
                    <p class="hero-subtitle">
                        @if (Model.Person.IsDirector == true)
                        {
                            @:<i class="fas fa-film me-2"></i>Director
                        }
                        else
                        {
                            @:<i class="fas fa-star me-2"></i>Actor
                        }
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Section -->
    <div class="container mb-5">
        <div class="row g-4">
            <!-- Basic Info Card -->
            <div class="col-lg-4">
                <div class="info-card">
                    <h3 class="card-title mb-4 text-center">
                        <i class="fas fa-user me-2"></i>Basic Information
                    </h3>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-user"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Name</div>
                            <div class="info-value">@Model.Person.Name</div>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-birthday-cake"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Date of Birth</div>
                            <div class="info-value">@Model.Person.DateOfBirth</div>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-flag"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Nationality</div>
                            <div class="info-value">@Model.Person.Nationality</div>
                        </div>
                    </div>
                    
                    <div class="info-item">
                        <div class="info-icon">
                            <i class="fas fa-venus-mars"></i>
                        </div>
                        <div class="info-content">
                            <div class="info-label">Gender</div>
                            <div class="info-value">@(Model.Person.Gender.Value ? "Female" : "Male")</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- About Card -->
            <div class="col-lg-8">
                <div class="info-card">
                    <h3 class="card-title mb-4">
                        <i class="fas fa-info-circle me-2"></i>About @Model.Person.Name
                    </h3>
                    <p class="description-text">@Model.Person.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Movies Section -->
    <div class="container mb-5">
        <h2 class="section-title" style="
    padding-right: 300px;
">
            @if (Model.Person.IsDirector == true)
            {
                @:<i class="fas fa-film me-3"></i>Directed by @Model.Person.Name
            }
            else
            {
                @:<i class="fas fa-star me-3"></i>Starred in
            }
        </h2>

        <div class="row g-4">
            @foreach (var movie in Model.Movies)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <a href="@Url.Action("Detail", "Movie", new { id = movie.MovieId })" class="text-decoration-none">
                        <div class="movie-card">
                            <img src="@Url.Content(movie.SmallImage)" class="movie-image w-100" alt="@movie.MovieNameEnglish" />
                            <div class="movie-info">
                                <h4 class="movie-title">@movie.MovieNameEnglish</h4>
                                <p class="movie-year">
                                    <i class="fas fa-calendar me-1"></i>
                                    @(movie.ToDate.HasValue ? movie.ToDate.Value.Year.ToString() : "N/A")
                                </p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</div>