@{
    ViewBag.Title = "Booking Successful";
    var originalPrice = TempData["OriginalPrice"] != null ? Convert.ToDecimal(TempData["OriginalPrice"]) : 0;
    var usedScore = TempData["UsedScore"] != null ? Convert.ToInt32(TempData["UsedScore"]) : 0;
    var finalPrice = TempData["FinalPrice"] != null ? Convert.ToDecimal(TempData["FinalPrice"]) : 0;
    var promotionDiscount = TempData["PromotionDiscount"] != null ? Convert.ToDecimal(TempData["PromotionDiscount"]) : 0;
    var rankDiscount = TempData["RankDiscount"] != null ? Convert.ToDecimal(TempData["RankDiscount"]) : 0;
    var promotionTitle = TempData["PromotionTitle"] as string;
}


<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-success mb-4">🎉 Booking Successful!</h2>

        <p class="text-center">Thank you for booking with us. Here is your booking summary:</p>

        <hr class="mb-4" />

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>🎬 Movie:</strong> @TempData["MovieName"]</p>
                <p><strong>📅 Date:</strong> @TempData["ShowDate"]</p>
                <p><strong>⏰ Time:</strong> @TempData["ShowTime"]</p>
                <p><strong>💺 Seats:</strong> @TempData["Seats"]</p>
                <p><strong>📽 Screen: </strong> @TempData["CinemaRoomName"]</p>
            </div>

            <div class="col-md-6">
                <p><strong>🧾 Invoice ID:</strong> @TempData["InvoiceId"]</p>
                <p><strong>🕓 Booking Time:</strong> @TempData["BookingTime"]</p>

                <hr />
                <p><strong>💰 Original Price:</strong> @String.Format("{0:N0}", originalPrice) VND</p>
                
                @if (promotionDiscount > 0)
                {
                    <p><strong>🏷️ Promotion Discount:</strong> <span class="text-success">-@String.Format("{0:N0}", promotionDiscount) VND</span></p>
                    @if (!string.IsNullOrEmpty(promotionTitle))
                    {
                        <p class="text-muted small">(@promotionTitle)</p>
                    }
                }
                
                @if (rankDiscount > 0)
                {
                    <p><strong>⭐ Rank Discount:</strong> <span class="text-success">-@String.Format("{0:N0}", rankDiscount) VND</span></p>
                }
                
                @if (usedScore > 0)
                {
                    <p><strong>🎯 Used Score:</strong> @String.Format("{0:N0}", usedScore) points</p>
                }
                
                <p><strong>✅ Final Price:</strong> <span class="text-danger fw-bold">@String.Format("{0:N0}", finalPrice) VND</span></p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">🏠️ Home</a>
            <a asp-controller="Booking" asp-action="TicketBooking" class="btn btn-outline-secondary">🎟️ Book Another Ticket</a>
        </div>
    </div>
</div>

<partial name="_ToastMessages" />