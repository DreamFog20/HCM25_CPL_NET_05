@model MovieTheater.ViewModels.PaymentViewModel

@{
    ViewData["Title"] = "Payment";
}

@section Styles {
    <link rel="stylesheet" href="~/css/payment.css" />
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Payment Information</h3>
                </div>
                <div class="card-body">
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Invoice ID:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.InvoiceId
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Movie:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.MovieName
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Show Date:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.ShowDate.ToString("dd/MM/yyyy")
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Show Time:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.ShowTime
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Seats:</strong>
                        </div>
                        <div class="col-md-8">
                            @Model.Seats
                        </div>
                    </div>

                    @if (Model.SelectedFoods != null && Model.SelectedFoods.Any())
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Food & Drinks:</strong>
                            </div>
                            <div class="col-md-8">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var food in Model.SelectedFoods)
                                        {
                                            <tr>
                                                <td>@food.Name</td>
                                                <td>@food.Quantity</td>
                                                <td>@food.Price.ToString("N0") VND</td>
                                                <td>@((food.Price * food.Quantity).ToString("N0")) VND</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3" class="text-end"><strong>Total Food:</strong></td>
                                            <td><strong>@Model.TotalFoodPrice.ToString("N0") VND</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Food & Drinks:</strong>
                            </div>
                            <div class="col-md-8 text-danger">
                                No food selected.
                            </div>
                        </div>
                    }

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Seat Price:</strong>
                        </div>
                        <div class="col-md-8">
                            <span class="text-success">@Model.TotalSeatPrice.ToString("N0") VND</span>
                        </div>
                    </div>

                    @if (Model.TotalFoodPrice > 0)
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <strong>Food & Drinks Price:</strong>
                            </div>
                            <div class="col-md-8">
                                <span class="text-info">@Model.TotalFoodPrice.ToString("N0") VND</span>
                            </div>
                        </div>
                    }

                    <hr class="my-3" />

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <strong>Total Amount:</strong>
                        </div>
                        <div class="col-md-8">
                            <strong class="text-primary fs-4 fw-bold">@Model.TotalAmount.ToString("N0") VND</strong>
                        </div>
                    </div>

                    <form asp-action="ProcessPayment" method="post">
                        <input type="hidden" asp-for="InvoiceId" />
                        <input type="hidden" asp-for="MovieName" />
                        <input type="hidden" asp-for="ShowDate" />
                        <input type="hidden" asp-for="ShowTime" />
                        <input type="hidden" asp-for="Seats" />
                        <input type="hidden" asp-for="TotalAmount" />
                        <input type="hidden" asp-for="OrderInfo" />
                        <input type="hidden" asp-for="TotalSeatPrice" />
                        <input type="hidden" asp-for="TotalFoodPrice" />

                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-lg">
                                Pay with VNPAY
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 