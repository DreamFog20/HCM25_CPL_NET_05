@model MovieTheater.ViewModels.ConfirmTicketAdminViewModel
@using System.Security.Claims

@{
    ViewBag.Title = "Ticket Information (Admin)";
    Layout = "_Layout";
    
    // Kiểm tra Model có null không
    if (Model == null)
    {
        <div class="container mt-4">
            <div class="alert alert-warning">
                <h4>Không có thông tin booking</h4>
                <p>Vui lòng quay lại trang booking để tạo vé mới.</p>
                <a href="@Url.Action("BookingMg", "Admin")" class="btn btn-primary">Quay lại Booking Management</a>
            </div>
        </div>
        return;
    }
    
    var booking = Model.BookingDetails;
    string movieName = booking?.MovieName ?? TempData["MovieName"] as string;
    string screen = booking?.CinemaRoomName ?? TempData["Screen"] as string;
    string showDate = booking != null ? booking.ShowDate.ToString("yyyy-MM-dd") : TempData["ShowDate"] as string;
    string showTime = booking?.ShowTime ?? TempData["ShowTime"] as string;
    string ticketId = booking?.InvoiceId ?? TempData["InvoiceId"] as string;
    string totalPrice = booking != null ? booking.TotalPrice.ToString("N0") : TempData["TotalPrice"] as string;
    string scoreUsed = booking?.ScoreUsed.ToString() ?? TempData["ScoreUsed"] as string;
    string memberId = Model?.MemberId ?? TempData["MemberId"] as string;
    string memberEmail = Model?.MemberEmail ?? TempData["MemberEmail"] as string;
    string memberIdentityCard = Model?.MemberIdentityCard ?? TempData["MemberIdentityCard"] as string;
    string memberPhone = Model?.MemberPhone ?? TempData["MemberPhone"] as string;
    // Set the correct fallback URL for Booking Management
    string bookingManagementUrl = Url.Action("BookingMg", "Admin");
    string returnUrl = Model?.ReturnUrl ?? bookingManagementUrl;
    var userRole = User.FindFirst(ClaimTypes.Role)?.Value;
    var status = booking?.Status == MovieTheater.Models.InvoiceStatus.Completed && !booking.Cancel ? "Completed" : 
                 booking?.Status == MovieTheater.Models.InvoiceStatus.Completed && booking.Cancel ? "Canceled" : "Not Paid";

    // Lấy thông tin food từ TempData hoặc Model
    var selectedFoods = Model?.SelectedFoods ?? new List<MovieTheater.ViewModels.FoodViewModel>();
    decimal totalFoodPrice = selectedFoods.Sum(f => f.Price * f.Quantity);

    // SỬA: Tính toán đúng Total Amount
    // Lấy giá gốc của seat (sau promotion, trước rank discount)
    decimal seatPrice = booking != null && booking.SelectedSeats != null
        ? booking.SelectedSeats.Sum(s => (decimal?)(s.PriceAfterPromotion ?? s.Price) ?? 0) : 0;
    
    // Sử dụng TotalPrice từ database (đã được tính đúng từ backend)
    decimal finalTotalAmount = booking?.TotalPrice ?? 0;
    
    // Tính toán để hiển thị breakdown - sử dụng giá cuối cùng từ database
    decimal runningTotal = finalTotalAmount;

    var qrStaffUrl = $"{Context.Request.Scheme}://{Context.Request.Host}/QRCode/Scanner?invoiceId={ticketId}";
}

@section Styles {
    <link rel="stylesheet" href="~/css/ticket-styles.css" />
}

<div class="ticket-page-container">
    <div class="ticket-page-wrapper">
        <!-- Header -->
        <div class="ticket-header">
            <div class="ticket-header-content">
                <div class="ticket-header-left">
                    <div class="ticket-header-icon">
                        <i class="fas fa-film ticket-icon"></i>
                    </div>
                    <div class="ticket-header-text">
                        <h1>Ticket Information (Admin)</h1>
                        <p>Booking ID: @ticketId</p>
                    </div>
                </div>
                <span class="ticket-status-badge @(status == "Completed" ? "ticket-status-completed" : status == "Canceled" ? "ticket-status-cancelled" : "ticket-status-secondary")">
                    @status
                </span>
            </div>
        </div>

        <div class="ticket-grid">
            <!-- Main Content -->
            <div class="ticket-main-content">
                <!-- Movie Information -->
                <div class="ticket-card-modern">
                    <div class="ticket-card-header">
                        <h5 class="ticket-card-title">
                            <i class="fas fa-film ticket-icon"></i>
                            <span>Movie & Show Details</span>
                        </h5>
                    </div>
                    <div class="ticket-card-body">
                        <div class="ticket-info-grid">
                            <div class="ticket-info-item">
                                <i class="fas fa-film ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Movie</p>
                                    <p>@movieName</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-calendar ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Date</p>
                                    <p>@showDate</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-clock ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Time</p>
                                    <p>@showTime</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-map-marker-alt ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Screen</p>
                                    <p>@screen</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-star ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Version</p>
                                    <p>@booking.VersionName</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-calendar ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Booking Time</p>
                                    @* <p>@(DateTime.Parse(booking.BookingDate.ToString("yyyy-MM-dd HH:mm")).ToString("dd/MM/yyyy HH:mm"))</p> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Seats -->
                <div class="ticket-card-modern">
                    <div class="ticket-card-header">
                        <h5 class="ticket-card-title">
                            <i class="fas fa-users ticket-icon"></i>
                            <span>Seat Information</span>
                        </h5>
                    </div>
                    <div class="ticket-card-body">
                        <div class="ticket-table-container">
                            <table class="ticket-table">
                                <thead>
                                    <tr>
                                        <th>Seat</th>
                                        <th>Type</th>
                                        <th>Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (booking != null && booking.SelectedSeats != null && booking.SelectedSeats.Any())
                                    {
                                        foreach (var seat in booking.SelectedSeats)
                                        {
                                            <tr>
                                                <td>@seat.SeatName</td>
                                                <td>
                                                    <span class="ticket-badge ticket-badge-outline">@seat.SeatType</span>
                                                </td>
                                                <td>
                                                    @if (seat.OriginalPrice.HasValue && seat.PromotionDiscount.HasValue && seat.PromotionDiscount.Value > 0)
                                                    {
                                                        <div class="ticket-price-item">
                                                            <span class="ticket-price-discount">@seat.OriginalPrice.Value.ToString("N0") VND</span>
                                                            <span class="ticket-price-value">@seat.PriceAfterPromotion.Value.ToString("N0") VND</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="ticket-price-value">@seat.Price.ToString("N0") VND</span>
                                                    }
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else if (TempData["SeatTableRows"] != null)
                                    {
                                        @Html.Raw(TempData["SeatTableRows"])
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Food & Drinks -->
                @if (selectedFoods.Any())
                {
                    <div class="ticket-card-modern">
                        <div class="ticket-card-header">
                            <h5 class="ticket-card-title">
                                <i class="fas fa-shopping-cart ticket-icon"></i>
                                <span>Food & Drinks</span>
                            </h5>
                        </div>
                        <div class="ticket-card-body">
                            <div class="ticket-table-container">
                                <table class="ticket-table">
                                    <thead>
                                        <tr>
                                            <th>Item</th>
                                            <th>Qty</th>
                                            <th>Price</th>
                                            <th>Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var food in selectedFoods)
                                        {
                                            <tr>
                                                <td>
                                                    @food.Name
                                                    @if (!string.IsNullOrEmpty(food.PromotionName))
                                                    {
                                                        <span class="ticket-badge ticket-badge-outline">@food.PromotionName (@food.PromotionDiscount.ToString("N0")% off)</span>
                                                    }
                                                </td>
                                                <td>@food.Quantity</td>
                                                <td>
                                                    @if (food.PromotionDiscount > 0 && food.OriginalPrice > food.Price)
                                                    {
                                                        <div class="ticket-price-item">
                                                            <span class="ticket-price-discount">@food.OriginalPrice.ToString("N0") VND</span>
                                                            <span class="ticket-price-value">@food.Price.ToString("N0") VND</span>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="ticket-price-value">@food.Price.ToString("N0") VND</span>
                                                    }
                                                </td>
                                                <td>@((food.Price * food.Quantity).ToString("N0")) VND</td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <td colspan="3">Food Total:</td>
                                            <td><strong>@totalFoodPrice.ToString("N0") VND</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Price Breakdown -->
                @if (Model.Subtotal > 0 || Model.RankDiscount > 0 || Model.VoucherAmount > 0 || Model.UsedScore > 0)
                {
                    <div class="ticket-card-modern">
                        <div class="ticket-card-header">
                            <h5 class="ticket-card-title">
                                <i class="fas fa-gift ticket-icon"></i>
                                <span>Price Breakdown</span>
                            </h5>
                        </div>
                        <div class="ticket-card-body">
                            <div class="ticket-price-breakdown">
                                @if (Model.RankDiscount > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Rank Discount (@Model.RankDiscountPercent.ToString("0.##")%)</span>
                                        <span class="ticket-price-discount">-@Model.RankDiscount.ToString("N0") VND</span>
                                    </div>
                                }
                                @if (Model.VoucherAmount > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Voucher</span>
                                        <span class="ticket-price-discount">-@Model.VoucherAmount.ToString("N0") VND</span>
                                    </div>
                                }
                                @if (Model.UsedScore > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">- Points Used</span>
                                        <span class="ticket-price-discount">-@Model.UsedScore (@Model.UsedScoreValue.ToString("N0") VND)</span>
                                    </div>
                                }
                                <div class="ticket-price-item">
                                    <span class="ticket-price-label">Seat Price</span>
                                    <span class="ticket-price-value">@seatPrice.ToString("N0") VND</span>
                                </div>
                                @if (totalFoodPrice > 0)
                                {
                                    <div class="ticket-price-item">
                                        <span class="ticket-price-label">Food & Drinks</span>
                                        <span class="ticket-price-value">@totalFoodPrice.ToString("N0") VND</span>
                                    </div>
                                }
                                <div class="ticket-price-divider"></div>
                                <div class="ticket-total-section">
                                    <span class="ticket-total-label">Total Amount</span>
                                    <span class="ticket-total-value">@runningTotal.ToString("N0") VND</span>
                                </div>
                                @if (Model.AddedScore > 0)
                                {
                                    <div class="ticket-points-earned">
                                        <span class="ticket-points-label">+ Points Earned</span>
                                        <span class="ticket-points-value">+@Model.AddedScore (@Model.AddedScoreValue.ToString("N0") VND)</span>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }

                <!-- Member Information -->
                <div class="ticket-card-modern">
                    <div class="ticket-card-header">
                        <h5 class="ticket-card-title">
                            <i class="fas fa-user ticket-icon"></i>
                            <span>Member Information</span>
                        </h5>
                    </div>
                    <div class="ticket-card-body">
                        <div class="ticket-info-grid">
                            <div class="ticket-info-item">
                                <i class="fas fa-id-card ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Member ID</p>
                                    <p>@memberId</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-envelope ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Email</p>
                                    <p>@memberEmail</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-id-badge ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Identity Card</p>
                                    <p>@memberIdentityCard</p>
                                </div>
                            </div>
                            <div class="ticket-info-item">
                                <i class="fas fa-phone ticket-info-icon"></i>
                                <div class="ticket-info-content">
                                    <p>Phone</p>
                                    <p>@memberPhone</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="ticket-btn-group">
                    <a href="@Model.ReturnUrl" class="ticket-btn ticket-btn-primary ticket-btn-full">
                        <i class="fas fa-arrow-left"></i> Back to Booking Management
                    </a>
                    @if (booking != null && booking.Status == MovieTheater.Models.InvoiceStatus.Completed && !booking.Cancel)
                    {
                        <form asp-controller="Ticket" asp-action="CancelByAdmin" asp-route-id="@booking.InvoiceId"
                              method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to cancel this ticket? You will receive a voucher equal to the ticket price.');">
                            <button type="submit" class="ticket-btn ticket-btn-outline-danger ticket-btn-full">
                                <i class="fas fa-times"></i> Cancel Ticket
                            </button>
                        </form>
                    }
                </div>
            </div>

            <!-- QR Code Section -->
            <div class="ticket-qr-section">
                <div class="ticket-qr-card">
                    <div class="ticket-qr-header">
                        <h5 class="ticket-qr-title">
                            <i class="fas fa-qrcode ticket-icon"></i>
                            <span>QR Code</span>
                        </h5>
                        <p class="ticket-qr-subtitle">Scan for ticket information</p>
                    </div>
                    <div class="ticket-qr-body">
                        <div class="ticket-qr-container">
                            <canvas id="qrcode-staff"></canvas>
                        </div>
                        <button id="downloadQRStaff" class="ticket-btn ticket-btn-success ticket-btn-full">
                            <i class="fas fa-download"></i> Download QR Code
                        </button>
                        <p class="ticket-qr-description">Present this QR code at the cinema for quick entry</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<partial name="_ToastMessages" />

<script src="https://cdn.jsdelivr.net/npm/qrious@4.0.2/dist/qrious.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var qrStaffUrl = '@qrStaffUrl';
        var qrStaff = new QRious({
            element: document.getElementById('qrcode-staff'),
            value: qrStaffUrl,
            size: 200
        });
        document.getElementById('downloadQRStaff').onclick = function() {
            var canvas = document.getElementById('qrcode-staff');
            var link = document.createElement('a');
            link.href = canvas.toDataURL();
            link.download = 'ticket-info-qr.png';
            link.click();
        }
    });
</script>
