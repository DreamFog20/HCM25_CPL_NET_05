@{
    ViewBag.Title = "Payment Failed";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-danger mb-4">❌ Payment Failed!</h2>

        <p class="text-center">Sorry, your payment was not successful. Please try again later.</p>

        <hr class="mb-4" />

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>🎬 Movie:</strong> @TempData["MovieName"]</p>
                <p><strong>📅 Show Date:</strong> @TempData["ShowDate"]</p>
                <p><strong>⏰ Show Time:</strong> @TempData["ShowTime"]</p>
                <p><strong>💺 Seats:</strong> @TempData["Seats"]</p>
            </div>
            <div class="col-md-6">
                <p><strong>🧾 Invoice ID:</strong> @TempData["InvoiceId"]</p>
                <p><strong>🕓 Booking Time:</strong> @TempData["BookingTime"]</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/Home/Index" class="btn btn-primary me-2">🏠️ Home</a>
            <a href="/Booking/TicketBooking" class="btn btn-outline-secondary">🎟️ Book Again</a>
        </div>
    </div>
</div> 