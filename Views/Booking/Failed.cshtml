@{
    ViewBag.Title = "Thanh toán thất bại";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-4">
        <h2 class="text-center text-danger mb-4">❌ Thanh toán thất bại!</h2>

        <p class="text-center">Rất tiếc, thanh toán của bạn không thành công. Vui lòng thử lại sau.</p>

        <hr class="mb-4" />

        <div class="row mb-3">
            <div class="col-md-6">
                <p><strong>🎬 Phim:</strong> @TempData["MovieName"]</p>
                <p><strong>📅 Ngày chiếu:</strong> @TempData["ShowDate"]</p>
                <p><strong>⏰ Giờ chiếu:</strong> @TempData["ShowTime"]</p>
                <p><strong>💺 Ghế:</strong> @TempData["Seats"]</p>
            </div>
            <div class="col-md-6">
                <p><strong>🧾 Mã hóa đơn:</strong> @TempData["InvoiceId"]</p>
                <p><strong>🕓 Thời gian đặt:</strong> @TempData["BookingTime"]</p>
            </div>
        </div>

        <div class="text-center mt-4">
            <a href="/Home/Index" class="btn btn-primary me-2">🏠️ Về trang chủ</a>
            <a href="/Booking/TicketBooking" class="btn btn-outline-secondary">🎟️ Đặt vé lại</a>
        </div>
    </div>
</div> 