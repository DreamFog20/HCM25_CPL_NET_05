@model MovieTheater.ViewModels.BookingSuccessViewModel
@{
    ViewBag.Title = "Payment Failed";
    var booking = Model.BookingDetails;
    var seatDetails = booking.SelectedSeats ?? new List<MovieTheater.ViewModels.SeatDetailViewModel>();
    var selectedFoods = Model.SelectedFoods ?? new List<MovieTheater.ViewModels.FoodViewModel>();
    var totalFoodPrice = Model.TotalFoodPrice;
    var subtotal = Model.Subtotal;
    var rankDiscount = Model.RankDiscount;
    var voucherAmount = Model.VoucherAmount;
    var usedScore = Model.UsedScore;
    var usedScoreValue = Model.UsedScoreValue;
    var totalPriceValue = Model.TotalPrice;
    var movieName = booking.MovieName;
    var screen = booking.CinemaRoomName;
    var version = booking.VersionName;
    var showDate = booking.ShowDate.ToString("yyyy-MM-dd");
    var showTime = booking.ShowTime;
    var ticketId = booking.InvoiceId;
    var bookingDate = booking.BookingDate?.ToString("yyyy-MM-dd HH:mm") ?? "";
}
@Html.Partial("_BookingProgress")
<style>
    .ticket-failed-header {
        background: #ffe3e3;
        border-radius: 12px 12px 0 0;
        padding: 32px 0 16px 0;
        box-shadow: 0 2px 8px rgba(0,0,0,0.04);
        display: flex;
        justify-content: space-between;
        align-items: center;
        text-align: left;
        padding-left: 2rem;
        padding-right: 2rem;
    }
    .ticket-failed-header h2 {
        font-weight: bold;
        margin-bottom: 0;
        text-align: left;
        color: #dc3545;
    }
    .status-badge {
        display: inline-block;
        padding: 0.35em 1.2em;
        font-size: 1rem;
        font-weight: 600;
        border-radius: 1.2em;
        color: #fff;
        margin-left: 1rem;
        background-color: #dc3545;
    }
    .ticket-info-label {
        font-weight: 500;
        color: #333;
        margin-bottom: 0.1rem;
        font-size: 0.98rem;
        margin-right: 0.5rem;
    }
    .ticket-info-value {
        background: #f8f9fa;
        border: none;
        border-bottom: 1px solid #e0e0e0;
        border-radius: 0;
        padding: 0.2rem 0.5rem;
        font-size: 1rem;
        color: #222;
        opacity: 1;
        cursor: not-allowed;
        box-shadow: none;
        min-width: 80px;
        margin-right: 1.5rem;
        margin-bottom: 0.2rem;
    }
    .ticket-card {
        max-width: 700px;
        margin: 0 auto;
        border-radius: 12px;
        overflow: hidden;
    }
    .btn-ticket-back {
        background: #007bff;
        color: #fff;
        font-weight: 500;
        border-radius: 6px;
        padding: 0.6rem 2.2rem;
        font-size: 1.1rem;
        margin-top: 1.5rem;
    }
    .btn-ticket-back:hover {
        background: #0056b3;
        color: #fff;
    }
    .ticket-row {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
        margin-bottom: 0.3rem;
    }
    .ticket-row .ticket-info-label {
        min-width: 90px;
    }
    .ticket-row .ticket-info-value {
        flex: 1 1 120px;
        min-width: 80px;
        margin-right: 2rem;
    }
    .ticket-section-title {
        margin-top: 1.2rem;
        margin-bottom: 0.5rem;
        font-weight: 600;
        font-size: 1.1rem;
    }
    .ticket-total-row {
        display: flex;
        justify-content: flex-end;
        align-items: center;
        margin-top: 0.5rem;
        margin-bottom: 0.5rem;
    }
    .ticket-total-label {
        font-weight: 600;
        margin-right: 0.5rem;
    }
    .ticket-total-value {
        font-weight: 600;
        font-size: 1.1rem;
        color: #007bff;
    }
</style>
<div class="container mt-4 d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="ticket-card card shadow p-0 w-100" style="max-width: 1000px;">
        <div class="ticket-failed-header">
            <h2 class="mb-0">Payment Failed</h2>
            <span class="status-badge">Failed</span>
        </div>
        <div class="p-4">
            <div class="row align-items-stretch">
                <div class="col-lg-8 col-12 mb-3 mb-lg-0 border-end" style="border-color: #e0e0e0 !important;">
                    <div class="ticket-section-title">Movie & Show Info</div>
                    <div class="ticket-row">
                        <label class="ticket-info-label">Movie Name</label>
                        <input type="text" class="ticket-info-value" value="@movieName" readonly />
                    </div>
                    <div class="ticket-row">
                        <label class="ticket-info-label">Date</label>
                        <input type="text" class="ticket-info-value" value="@showDate" readonly />
                        <label class="ticket-info-label">Screen</label>
                        <input type="text" class="ticket-info-value" value="@screen" readonly />
                    </div>
                    <div class="ticket-row">
                        <label class="ticket-info-label">Ticket ID</label>
                        <input type="text" class="ticket-info-value" value="@ticketId" readonly />
                        <label class="ticket-info-label">Version</label>
                        <input type="text" class="ticket-info-value" value="@version" readonly />
                    </div>
                    <div class="ticket-row">
                        <label class="ticket-info-label">Booking Time</label>
                        <input type="text" class="ticket-info-value" value="@(DateTime.Parse(bookingDate).ToString("dd/MM/yyyy HH:mm"))" readonly />
                        <label class="ticket-info-label">Time</label>
                        <input type="text" class="ticket-info-value" value="@showTime" readonly />
                    </div>
                    <div class="ticket-section-title">Seat(s)</div>
                    <table class="table table-bordered mb-2">
                        <thead>
                            <tr>
                                <th>Seat</th>
                                <th>Type</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (seatDetails.Any())
                            {
                                foreach (var seat in seatDetails)
                                {
                                    <tr>
                                        <td>@seat.SeatName</td>
                                        <td>@seat.SeatType</td>
                                        <td>
                                            @if (seat.OriginalPrice.HasValue && seat.PriceAfterPromotion.HasValue && seat.OriginalPrice.Value > seat.PriceAfterPromotion.Value)
                                            {
                                                <span style="text-decoration: line-through; color: #888;">@seat.OriginalPrice.Value.ToString("N0") VND</span>
                                                <span style="color: #dc3545; font-weight: bold;">@seat.PriceAfterPromotion.Value.ToString("N0") VND</span>
                                            }
                                            else if (seat.OriginalPrice.HasValue)
                                            {
                                                <span style="color: #dc3545; font-weight: bold;">@seat.OriginalPrice.Value.ToString("N0") VND</span>
                                            }
                                            else
                                            {
                                                <span style="color: #dc3545; font-weight: bold;">@seat.Price.ToString("N0") VND</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                    @if (selectedFoods.Any())
                    {
                        <div class="ticket-section-title">Food & Drinks</div>
                        <table class="table table-bordered mb-2">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var food in selectedFoods)
                                {
                                    <tr>
                                        <td>@food.Name</td>
                                        <td>@food.Quantity</td>
                                        <td>@food.Price.ToString("N0") VND</td>
                                        <td>@((food.Price * food.Quantity).ToString("N0")) VND</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end"><strong>Total Food:</strong></td>
                                    <td><strong>@totalFoodPrice.ToString("N0") VND</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    }
                    <div class="ticket-section-title">Price Breakdown</div>
                    <table class="table table-borderless mb-2">
                        <tbody>
                            @{
                                decimal runningTotal = subtotal;
                            }
                            <tr>
                                <td style="white-space: nowrap;">Subtotal</td>
                                <td class="text-end" style="white-space: nowrap;">@subtotal.ToString("N0") VND</td>
                            </tr>
                            @if (rankDiscount > 0)
                            {
                                runningTotal -= rankDiscount;
                                <tr>
                                    <td style="white-space: nowrap;">- Rank Discount</td>
                                    <td class="text-end" style="white-space: nowrap;">-@rankDiscount.ToString("N0") VND</td>
                                </tr>
                            }
                            @if (usedScore > 0)
                            {
                                runningTotal -= usedScoreValue;
                                <tr>
                                    <td style="white-space: nowrap;">- Points Used</td>
                                    <td class="text-end" style="white-space: nowrap;">-@usedScore (@usedScoreValue.ToString("N0") VND)</td>
                                </tr>
                            }
                            @if (totalFoodPrice > 0)
                            {
                                runningTotal += totalFoodPrice;
                                <tr>
                                    <td style="white-space: nowrap;">+ Food & Drinks</td>
                                    <td class="text-end" style="white-space: nowrap;">+@totalFoodPrice.ToString("N0") VND</td>
                                </tr>
                            }
                            @if (voucherAmount > 0)
                            {
                                runningTotal -= voucherAmount;
                                <tr>
                                    <td style="white-space: nowrap;">- Voucher</td>
                                    <td class="text-end" style="white-space: nowrap;">-@voucherAmount.ToString("N0") VND</td>
                                </tr>
                            }
                            @if (runningTotal < 0) { runningTotal = 0; }
                            <tr>
                                <td class="ticket-total-label">Total Price</td>
                                <td class="ticket-total-value text-end">@runningTotal.ToString("N0") VND</td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="text-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary fw-bold px-4 me-3" style="min-width: 180px;">
                            <i class="fas fa-home me-1"></i> Home
                        </a>
                        <a href="/#booking-widget" class="btn btn-outline-secondary fw-bold px-4" style="min-width: 180px;">
                            <i class="fas fa-plus me-1"></i> Book Another Ticket
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 col-12 d-flex flex-column align-items-center justify-content-center">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <h4 class="text-danger mb-3">Sorry, your payment was not successful.<br />Please try again later.</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 