{
  "Logging": {
    "LogLevel": {
      "Default": "None", // Tắt toàn bộ log hệ thống
      "Microsoft": "None", // Không log middleware, routing, framework
      "Microsoft.Hosting.Lifetime": "None",
      "Microsoft.EntityFrameworkCore": "None"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=(local);uid=sa;pwd=123456;database=MovieTheater;TrustServerCertificate=True;Trusted_Connection=True;"
  }
}
  